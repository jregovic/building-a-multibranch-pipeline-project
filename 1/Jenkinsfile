pipeline {
    agent any
    environment {
        CI = 'true'
        changed =  """${sh(
                returnStatus: true,
                script: 'git diff --name-only HEAD~1| cut -d "/" -f1 | uniq | grep 1'
            )}"""
    }
    stages {
        stage('Build') {
	when {
		changed
	}
            steps {
              echo "hellow World!"
            }
        }
        stage('Test') {
	when {
		changed
	}
            steps {
               echo 'test' 
            }
        }
    }
}
